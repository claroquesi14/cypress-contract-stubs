{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "declaration": true,
    "sourceMap": false,
    "outDir": "dist/publish",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": [],
    "types": ["cypress", "node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "cypress-contract-stubs": ["src/index.ts"]
    }
  },
  "include": ["src"]
}
